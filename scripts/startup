#!/bin/bash
# run at startup

# input & stuff
setxkbmap si              # set keyboard to slovene
syndaemon -t -k -i 1 -d & # disable touchpad when typing
xset -b                   # disable beep

# daemons
urxvtd &
redshift -l 46:14 -t 4000:3500 &

# set keys
setxkbmap -option ctrl:nocaps

# start emacs daemon
emacs --daemon &

# xmonad + restore panels
xmonad --replace &
sleep 1 && kill -9 $(pgrep panel)
xfce4-panel &
